{
    "name": "tinyearth",
    "version": "1.0.1-beta.3",
    "type": "module",
    "description": "tinyearth: a 3d earth visualization library",
    "main": "dist/tinyearth.js",
    "files": [
        "dist"
    ],
    "exports": {
        "./*": {
            "import": "./dist/*.js",
            "types": "./dist/*.d.ts"
        },
        "./style.css": "./dist/tinyearth.css"
    },
    "keywords": [
        "webgl",
        "earth",
        "3d",
        "visualization",
        "gis",
        "spatial",
        "map"
    ],
    "author": {
        "name": "wkgreat",
        "email": "wkgreat@outlook.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/wkgreat/tinyearth"
    },
    "license": "MIT",
    "homepage": "https://github.com/wkgreat/tinyearth",
    "sideEffects": [
        "**/*.css",
        "**/*.vert",
        "**/*.frag",
        "**/*.glsl"
    ],
    "dependencies": {
        "gl-matrix": "^3.4.3",
        "proj4": "^2.15.0"
    },
    "devDependencies": {
        "@babel/core": "^7.27.4",
        "@babel/preset-env": "^7.27.2",
        "@rollup/plugin-commonjs": "^28.0.6",
        "@rollup/plugin-node-resolve": "^16.0.1",
        "@rollup/plugin-typescript": "^12.1.4",
        "@rollup/plugin-url": "^8.0.2",
        "@types/jest": "^30.0.0",
        "@types/node": "^24.5.2",
        "@types/proj4": "^2.19.0",
        "babel-jest": "^30.0.0",
        "babel-loader": "^10.0.0",
        "copy-webpack-plugin": "^12.0.2",
        "copyfiles": "^2.4.1",
        "cross-env": "^7.0.3",
        "css-loader": "^7.1.2",
        "fast-glob": "^3.3.3",
        "fs-extra": "^11.3.2",
        "gh-pages": "^6.3.0",
        "html-webpack-plugin": "^5.6.3",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^30.0.0",
        "jest-environment-jsdom": "^30.0.2",
        "jest-raw-loader": "^1.0.1",
        "json-loader": "^0.5.7",
        "raw-loader": "^4.0.2",
        "rimraf": "^6.0.1",
        "rollup": "^4.52.3",
        "rollup-plugin-glsl": "^1.3.0",
        "rollup-plugin-postcss": "^4.0.2",
        "style-loader": "^4.0.0",
        "ts-jest": "^29.4.4",
        "ts-loader": "^9.5.4",
        "typescript": "^5.9.2",
        "unzipper": "^0.12.3",
        "url-loader": "^4.1.1",
        "webpack": "^5.102.0",
        "webpack-cli": "^6.0.1",
        "webpack-dev-server": "^5.2.2"
    },
    "scripts": {
        "clean": "rimraf output dist",
        "build:types": "npx tsc && npx copyfiles -u 1 src/**/*.{css,vert,frag,glsl,html,json,png,jpg} output/src/",
        "build:tinyearth": "yarn run build:types && rollup -c && npx copyfiles -u 3 output/types/src/**/* dist/",
        "build": "yarn run build:tinyearth",
        "build:demo": "webpack --config webpack.config.js",
        "start:demo": "webpack-dev-server --config webpack.config.js",
        "test": "jest --runInBand --no-watchman",
        "prepublishOnly": "yarn run clean && yarn run build"
    }
}
